# Include package metadata
include README.md
include LICENSE

# Include web assets (templates, CSS, JS, favicon)
recursive-include src/python_pubsub_devtools/web/templates *.html
recursive-include src/python_pubsub_devtools/web/static/css *.css
recursive-include src/python_pubsub_devtools/web/static/js *.js
include src/python_pubsub_devtools/web/static/favicon.svg

# Exclude everything else
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
global-exclude tests/*
recursive-exclude tests *
recursive-exclude docs *
recursive-exclude examples *
prune tests
prune docs
prune examples
